{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "includeFiles": "backend/**",
        "excludeFiles": [
          "backend/monthly_attendance_fixed/**",
          "backend/tests/**",
          "backend/scripts/**",
          "backend/__pycache__/**",
          "backend/**/__pycache__/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/vercel_wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "backend/vercel_wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "backend/vercel_wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/vercel_wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "dashboard.settings",
    "PYTHONPATH": "backend"
  }
}