{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/vercel_wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/vercel_wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "backend/vercel_wsgi.py"
    },
    {
      "src": "/django-static/(.*)",
      "dest": "backend/vercel_wsgi.py"
    },
    {
      "src": "/media/(.*)",
      "dest": "backend/vercel_wsgi.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "dashboard.settings",
    "PYTHONPATH": "backend"
  },
  "installCommand": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
  "buildCommand": "cd frontend && npm run build"
}